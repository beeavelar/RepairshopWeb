@model RepairshopWeb.Data.Entities.Vehicle

@{
    ViewData["Title"] = "Delete";
     Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<br />
<h1 style="margin-left: 30px;"><b>DELETE VEHICLE</b></h1>
<h3 style="color: red; font-family: Arial; font-size: large; margin-left: 30px;"><b>Are you sure you want to delete this?</b></h3>
<br />
<div style="margin-left: 30px;">
    <div class="row" style="font-family: Arial; font-size: medium">
        <div class="col-md-8">
            <dl class="row">
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.LicensePlate)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.LicensePlate)
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Client)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Client.FullName)
                </dd class>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.VehicleModel)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.VehicleModel)
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Year)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Year)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash-can"></i></button>
        <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
    </form>
</div>
<br />