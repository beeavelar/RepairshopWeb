@model RepairshopWeb.Models.VehicleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit vehicle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <div class="form-group">
                <label asp-for="ClientName">Client Name</label> <br />
                <input asp-for="ClientName" class="form-control"/>
                <span asp-validation-for="ClientName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate">License Plate</label> <br />
                <input asp-for="LicensePlate" class="form-control"/>
                <span asp-validation-for="LicensePlate" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand">Brand</label> <br />
                <input asp-for="Brand" class="form-control"/>
                <span asp-validation-for="Brand" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleModel">Vehicle Model</label> <br />
                <input asp-for="VehicleModel" class="form-control"/>
                <span asp-validation-for="VehicleModel" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category">Category</label> <br />
                <input asp-for="Category" class="form-control"/>
                <span asp-validation-for="Category" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color">Color</label> <br />
                <input asp-for="Color" class="form-control"/>
                <span asp-validation-for="Color" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year">Year</label> <br />
                <input asp-for="Year" class="form-control"/>
                <span asp-validation-for="Year" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i></button>
                <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
            </div>
        </form>
    </div>
     <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Photo" style="width:100px;height:150px;max-width:100%;height:auto">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
