@model RepairshopWeb.Models.ClientViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit client</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <div class="form-group">
                <label asp-for="FirstName">First Name</label> <br />
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label> <br />
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label> <br />
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode">Postal Code</label> <br />
                <input asp-for="PostalCode" class="form-control"/>
                <span asp-validation-for="PostalCode" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone</label> <br />
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label> <br />
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nif">NIF</label> <br />
                <input asp-for="Nif" class="form-control"/>
                <span asp-validation-for="Nif" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i></button>
                <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Photo" style="width:100px;height:150px;max-width:100%;height:auto">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
