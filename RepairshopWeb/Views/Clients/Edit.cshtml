<br />
<h1><b>EDIT CLIENT</b></h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <div class="form-group">
                <label asp-for="FirstName" style="color: black; font-family: Arial; font-size: small">First Name</label> <br />
                <input asp-for="FirstName" class="form-control" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" style="color: black; font-family: Arial; font-size: small">Last Name</label> <br />
                <input asp-for="LastName" class="form-control" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" style="color: black; font-family: Arial; font-size: small">Address</label> <br />
                <input asp-for="Address" class="form-control" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" style="color: black; font-family: Arial; font-size: small">Postal Code</label> <br />
                <input asp-for="PostalCode" class="form-control" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="PostalCode" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" style="color: black; font-family: Arial; font-size: small">Phone</label> <br />
                <input asp-for="Phone" class="form-control" maxlength="9" minlength="9" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="Phone" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" style="color: black; font-family: Arial; font-size: small">Email</label> <br />
                <input asp-for="Email" class="form-control" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nif" style="color: black; font-family: Arial; font-size: small">NIF</label> <br />
                <input asp-for="Nif" class="form-control" maxlength="9" minlength="9" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="Nif" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" style="color: black; font-family: Arial; font-size: small"></label>
                <input asp-for="ImageFile" type="file" style="color: black; font-family: Arial; font-size: small"/>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" data-toggle="tooltip" title="Save"><i class="fa-regular fa-floppy-disk"></i></button>
                <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Photo" style="width:100px;height:150px;max-width:100%;height:auto">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
