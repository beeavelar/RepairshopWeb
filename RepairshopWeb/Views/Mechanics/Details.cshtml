<h1 style="margin-left: 30px;"><b>MECHANIC DETAILS</b></h1>
<br />
<div style="margin-left: 30px;">
   <div class="row" style="font-family: Arial; font-size: medium">
       <div class="col-md-8">
            <dl class="row">
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class = "col-sm-3">
