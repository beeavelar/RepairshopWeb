@model RepairshopWeb.Data.Entities.Repair

@{
    ViewData["Title"] = "Create new repair";
}

<h1>New Repair</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairPrice" class="control-label"></label>
                <input asp-for="RepairPrice" class="form-control" />
                <span asp-validation-for="RepairPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaborPrice" class="control-label"></label>
                <input asp-for="LaborPrice" class="form-control" />
                <span asp-validation-for="LaborPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-user-plus"></i></button>
                <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
