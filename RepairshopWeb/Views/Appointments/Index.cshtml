@model IEnumerable<RepairshopWeb.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<br />
<p style="margin-left: 20px;">
    <a asp-action="Create" class="btn btn-primary" data-toggle="tooltip" title="Create New"><i class="fa-solid fa-plus"></i>  Create New</a>
</p>
<br />
<div class="row" style="font-family: Arial; font-size: small; margin-left: 10px;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><b>APPOINTMENTS</b></h1>
            </div>
            <br />
            <div>
                <table id="MyTable" class="table table-hover table-striped">
                    <thead style="text-transform: uppercase;">
                        <tr>
                            @if (this.User.IsInRole("Admin"))
                            {
                                <th>
                                    @Html.DisplayNameFor(model => model.User.FullName)
                                </th>
                            }
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AppointmentDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AlertDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Client)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vehicle)
                            </th>
                            <th width="20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (this.User.IsInRole("Admin"))
                                {
                                    <th>
                                        @Html.DisplayFor(modelItem => item.User.FullName)
                                    </th>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AlertDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
                                </td>
                                <td style="text-align:right">
                                    <a  asp-controller="RepairOrders" asp-action="Index" asp-route-id="@item.Id" class="btn btn-warning" id="btnCreate" data-toggle="tooltip" title="Create Repair Order"><i class="fa-sharp fa-solid fa-list-check"></i></a> |
                                    <a asp-action="DeleteRepairOrder" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete" data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br/>



