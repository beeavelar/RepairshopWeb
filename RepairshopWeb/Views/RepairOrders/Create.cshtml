@model IEnumerable<RepairshopWeb.Data.Entities.RepairOrderDetailTemp>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<br />
<p style="margin-left: 20px;">
    <a asp-action="AddService" asp-route-id="@ViewBag.Appointment" class="btn btn-success"><i class="fa-solid fa-plus"></i> Add Service</a>
    <a asp-action="ConfirmRepairOrder" asp-route-id="@ViewBag.Appointment" class="btn btn-primary" id="btnConfirm">Confirm</a>
</p>
<br />
<div class="row" style="font-family: Arial; font-size: small; margin-left: 10px; margin-right: 10px;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><b>NEW REPAIR ORDER</b></h1>
            </div>
            <br />
            <div>
                <table id="MyTable" class="table table-hover table-striped">
                    <thead style="text-transform: uppercase">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Service.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mechanic.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RepairPrice)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Service.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mechanic.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RepairPrice)
                                </td>
                                <td id="@item.Id">
                                    <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger" id="btnDeleteItem" data-toggle="tooltip" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <p style="margin-left: 10px;">
                    <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
                </p>
            </div>
        </div>
    </div>
</div>
<br />

@* Load datatable css *@
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

@section Scripts{

    <script src="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#MyTable').DataTable();
        });
    </script>

}

