@model IEnumerable<RepairshopWeb.Models.ServiceViewModel>

@{
    ViewData["Title"] = "ShowServices";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<br />
<div class="row" style="font-family: Arial; font-size: small; margin-left: 10px; margin-right: 10px;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><b>SERVICES TO DO</b></h1>
            </div>
            <br />
            <div>
                <table class="table table-hover table-striped">
                    <thead style="text-transform: uppercase">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <p style="margin-left: 10px;">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
                </p>
            </div>
        </div>
    </div>
</div>
<br />


