@model RepairshopWeb.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<h1 style="text-align: center;">Change user password</h1>
<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <ejs-textbox asp-for="OldPassword" id="oldpassword" type="password" placeholder="Current Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="OldPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <ejs-textbox asp-for="NewPassword" type="password" placeholder="New Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <ejs-textbox asp-for="ConfirmNewPassword" type="password" placeholder="Confirm New Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="ConfirmNewPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i></button>
                <a asp-action="ChangeUser" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

