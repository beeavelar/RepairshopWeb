@model RepairshopWeb.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<h1 style="text-align: center;"><b>CHANGE PASSWORD</b></h1>
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <ejs-textbox asp-for="OldPassword" id="oldpassword" type="password" placeholder="Current Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="OldPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <ejs-textbox asp-for="NewPassword" id="newpassword" type="password" placeholder="New Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <ejs-textbox asp-for="ConfirmNewPassword" id="confirmnewpassword" type="password" placeholder="Confirm New Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="ConfirmNewPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="btnConfirm" data-toggle="tooltip" data-placement="top" title="Save"><i class="fa-regular fa-floppy-disk"></i></button>
                <a asp-action="ChangeUser" class="btn btn-success"><i class="fa-solid fa-angles-left"></i> Back</a>
            </div>
        </form>
        <div class="text-success">
            <p style="color: red; font-family: Arial; font-size: medium; text-align:center">
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
