@model RepairshopWeb.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<h1 style="text-align: center;"><b>Reset Your Password</b></h1>
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Token" />
            <div class="form-group">
                <ejs-textbox asp-for="Username" id="username" placeholder="E-mail" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <ejs-textbox asp-for="NewPassword" id="newpassword" type="password" placeholder="New Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <ejs-textbox asp-for="ConfirmNewPassword" id="confirmnewpassword" type="password" placeholder="Confirm New Password" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="ConfirmNewPassword" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Reset password" class="btn btn-primary" />
            </div>
        </form>
        <div class="text-success">
            <p style="color: red; font-family: Arial; font-size: medium">
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

