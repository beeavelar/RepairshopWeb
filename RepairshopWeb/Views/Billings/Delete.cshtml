        </dt>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TotalToPay)
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash-can"></i></button>
