<div>
    <dl class="row" style="color: black; font-family: Arial; font-size: medium">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.RepairOrder)
        </dt>
        <dd class = "col-sm-9">
